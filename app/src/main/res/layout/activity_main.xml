<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="0dp"
        android:background="#FEF7E5"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Caffix"
        app:titleTextColor="#000000">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/profileButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#FEF7E5"
            android:contentDescription="Profile"
            android:src="@drawable/profile"
            android:scaleType="centerInside"/>


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/infoButton"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:background="@drawable/cb"
            android:backgroundTint="#663300" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/caffeineRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:text="총 카페인 섭취량: 0mg"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/caffeineInput"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/caffeineRecord"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:hint="카페인 양을 입력하세요."
        android:inputType="number"
        android:autofillHints="" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caffeineInput"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:text="추가하기"
        android:backgroundTint="#563B1E" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:textSize="18sp"
        android:text="카페인 찾아오기"
        android:gravity="center"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/cafeSpinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/cafeSpinner"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp" />

    <Spinner
        android:id="@+id/menuSpinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/categorySpinner"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp" />

    <Spinner
        android:id="@+id/sizeSpinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/menuSpinner"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp" />

    <Spinner
        android:id="@+id/optionSpinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/sizeSpinner"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/caffeineContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionSpinner"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:textSize="18sp"
        android:text="카페인 함량: 0mg" />

</RelativeLayout>
